{
    "cmake.generator": "Ninja",
    "cmake.configureSettings": {
        "CMAKE_EXE_LINKER_FLAGS": "-fuse-ld=lld",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
    },
    // Remove "cmake.buildDirectory" as it conflicts with Presets
    "clangd.arguments": [
        "--compile-commands-dir=build/debug",
        "--background-index",
        "--clang-tidy",
        "--header-insertion=never"
    ],
	"cmake.debugConfig": {
        "args": ["settings"]
    },

	"editor.matchBrackets": "always",
    "editor.guides.bracketPairs": false,
    "editor.guides.bracketPairsHorizontal": false,
    "[cpp]": {
        "editor.bracketPairColorization.enabled": true
    },

	"workbench.colorCustomizations": {
		"editorBracketMatch.background": "#00ff15", // Solid Red Background
		"editorBracketMatch.border": "#ffffff",     // White Border
		// "editorBracketHighlight.foreground1": "#ffd700", // Force colorization color 1
		"editorBracketHighlight.unexpectedBracket.foreground": "#ff0000"
	},

    "files.associations": {
        "CMakeLists.txt": "cmake"
    },
    "spellright.language": [
        "en-US-10-1."
    ],
    "spellright.documentTypes": [
        "javascript",
        "typescript",
        "python",
        "c",
        "csharp",
        "java",
        "markdown",
        "plaintext",
        "jsonc",
        "cpp"
    ],

	"cSpell.ignorePaths": [
		"**/*settings.json",
        "**/*.desktop",          // any file with the .desktop extension
        "**/CMakeLists.txt"      // the CMakeLists file at any folder depth
    ],

    "cSpell.words": [
        "Dont"
    ]
}