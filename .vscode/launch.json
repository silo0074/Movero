{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (CMake)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}", 
            "args": ["settings"],
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Release (CMake)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}", 
            "args": ["settings"],
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "stopAtEntry": false
        }
    ]
}